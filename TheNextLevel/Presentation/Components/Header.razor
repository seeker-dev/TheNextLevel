@inject NavigationManager Navigation

<header class="header">
    <div class="header-content">
        <div class="header-brand">
            <h1 class="app-title" @onclick="@(() => Navigation.NavigateTo("/"))">The Next Level</h1>
        </div>
        
        <nav class="header-nav">
            <a href="/" class="nav-link @GetActiveClass("/")">Projects</a>
            <a href="/tasks" class="nav-link @GetActiveClass("/tasks")">Tasks</a>
        </nav>
        
        <button class="menu-toggle" @onclick="ToggleMobileMenu">
            <span class="menu-icon"></span>
        </button>
    </div>
    
    @if (_showMobileMenu)
    {
        <div class="mobile-menu">
            <a href="/" class="mobile-nav-link @GetActiveClass("/")" @onclick="CloseMobileMenu">Projects</a>
            <a href="/tasks" class="mobile-nav-link @GetActiveClass("/tasks")" @onclick="CloseMobileMenu">Tasks</a>
        </div>
    }
</header>

@code {
    private bool _showMobileMenu = false;

    private string GetActiveClass(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath;
        return currentPath == path ? "active" : "";
    }

    private void ToggleMobileMenu()
    {
        _showMobileMenu = !_showMobileMenu;
    }

    private void CloseMobileMenu()
    {
        _showMobileMenu = false;
    }

}
