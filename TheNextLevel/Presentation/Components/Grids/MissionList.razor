@using Microsoft.AspNetCore.Components.Web.Virtualization
@using TheNextLevel.Application.DTOs
@using TheNextLevel.Core.DTOs
@using TheNextLevel.Presentation.Components.Cards
@using TheNextLevel.Presentation.Dialogs

@inject IMissionService MissionService

<div class="mission-list-container">
    @if (_isLoading)
    {
        <div class="loading-indicator">Loading missions...</div>
    }
    else
    {
        <div class="button-container">
            <button class="add-mission-btn" @onclick="OpenCreateModal">Add Mission âž•</button>
            <button class="refresh-missions-btn" @onclick="RefreshMissionsAsync">Refresh Missions ðŸ”„</button>
        </div>
        <Virtualize ItemsProvider="LoadMissionsProvider" @ref="_missionList" Context="mission">
            <ItemContent>
                <MissionCard Mission="mission" />
            </ItemContent>
            <Placeholder>
                <div class="loading-card">Loading mission...</div>
            </Placeholder>
            <EmptyContent>
                <div class="empty-state">
                    <div class="empty-icon">No missions available</div>
                </div>
            </EmptyContent>
        </Virtualize>
    }
</div>

<CreateModal
    IsVisible="@_showCreateModal"
    ItemType="ModalType.Mission"
    OnResult="HandleMissionCreated"
    OnCancel="CloseCreateModal" />

@code {
    private bool _isLoading = true;
    private Virtualize<MissionDto?> _missionList;
    private bool _showCreateModal = false;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = false;
    }

    private async ValueTask<ItemsProviderResult<MissionDto?>> LoadMissionsProvider(ItemsProviderRequest request)
    {
        try
        {
            _isLoading = true;
            var result = await MissionService.ListAsync(request.StartIndex, request.Count);
            var missions = result?.Items ?? [];
            var totalCount = result?.TotalCount ?? 0;
            return new ItemsProviderResult<MissionDto?>(missions, totalCount);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading missions: {ex.Message}");
            return new ItemsProviderResult<MissionDto?>([], 0);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void OpenCreateModal()
    {
        _showCreateModal = true;
    }

    private void CloseCreateModal()
    {
        _showCreateModal = false;
    }

    public async Task RefreshMissionsAsync()
    {
        if (_missionList != null)
        {
            await _missionList.RefreshDataAsync();
        }
    }

    private async Task HandleMissionCreated(IItemDto? newMission)
    {
        if (newMission is MissionDto missionDto)
        {
            // Optionally, you can add the new mission to the list or refresh the entire list
            await RefreshMissionsAsync();
        }
        _showCreateModal = false;
    }
}