@using Microsoft.AspNetCore.Components.Web.Virtualization
@using TheNextLevel.Application.DTOs
@using TheNextLevel.Presentation.Components.Buttons
@using TheNextLevel.Presentation.Components.Cards
@using TheNextLevel.Presentation.Dialogs

@inject ITaskService TaskService

<div class="filter-controls">
    <button class="filter-btn @(_showCompleted ? "" : "active")" @onclick="ShowPending">
        Pending
    </button>
    <button class="filter-btn @(_showCompleted ? "active" : "")" @onclick="ShowCompleted">
        Completed
    </button>
</div>

<div class="@(_totalCount > 0 ? "task-grid" : "")" tabindex="-1">
        <Virtualize ItemsProvider="LoadTasksProvider" @ref="_virtualizeComponent" Context="task">
            <ItemContent>
                <TaskCard
                    Task="task"
                    Project="Project"
                    OnTaskUpdated="HandleTaskUpdated"
                    OnTaskEdit="HandleTaskEdit"
                    OnTaskAssignToProject="HandleTaskAssignToProject"
                    OnTaskDeleteRequest="HandleTaskDeleteRequest" />
            </ItemContent>
            <Placeholder>
                <div class="loading-card">Loading...</div>
            </Placeholder>
            <EmptyContent>
                <div class="empty-state">
                    @if (Project == null)
                    {
                        <div class="empty-icon">üìÅ</div>
                        <p class="empty-title">No project selected</p>
                        <p class="empty-subtitle">Please select a project to view its tasks</p>
                    }
                    else if (_showCompleted)
                    {
                        <div class="empty-icon">‚úì</div>
                        <p class="empty-title">No completed tasks yet</p>
                        <p class="empty-subtitle">Tasks you complete will appear here</p>
                    }
                    else 
                    {
                        <div class="empty-icon">üéØ</div>
                        <p class="empty-title">No pending tasks</p>
                        <p class="empty-subtitle">You're all caught up! Time to add something new?</p>
                    }
                </div>
            </EmptyContent>
        </Virtualize>
</div>

<NewTaskDialog
    IsVisible="_showTaskDialog"
    OnResult="HandleTaskSaved"
    OnCancel="CloseTaskDialog"
    ExistingTask="_editingTask" />

<AssignTaskToProjectDialog
    IsVisible="_showAssignDialog"
    OnResult="HandleTaskAssigned"
    OnCancel="CloseAssignDialog"
    Task="_assigningTask" />

<ConfirmDeleteDialog
    IsVisible="_showDeleteConfirm"
    ItemName="@_deletingTask?.Name"
    ItemType="task"
    OnConfirm="ConfirmDelete"
    OnCancel="CancelDelete" />

@code {
    [Parameter]
    public ProjectDto? Project { get; set; }

    private Virtualize<TaskDto>? _virtualizeComponent;
    private bool _showCompleted = false;
    private bool _showTaskDialog = false;
    private bool _showAssignDialog = false;
    private bool _showDeleteConfirm = false;
    private int _pendingCount = 0;
    private int _completedCount = 0;
    private int _totalCount = 0;
    private TaskDto? _editingTask = null;
    private TaskDto? _assigningTask = null;
    private TaskDto? _deletingTask = null;

    private async ValueTask<ItemsProviderResult<TaskDto>> LoadTasksProvider(ItemsProviderRequest request)
    {
        if (Project == null)
        {
            return new ItemsProviderResult<TaskDto>(
                Array.Empty<TaskDto>(),
                0);
        }

        try
        {
            var pagedResult = await TaskService.GetTasksByProjectPagedAsync(
                projectId: Project?.Id ?? 0,
                skip: request.StartIndex,
                take: request.Count,
                isCompleted: _showCompleted);

            _totalCount = pagedResult.TotalCount;

            return new ItemsProviderResult<TaskDto>(
                pagedResult.Items,
                pagedResult.TotalCount);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading tasks: {ex.Message}");
            return new ItemsProviderResult<TaskDto>(
                Array.Empty<TaskDto>(),
                0);
        }
    }

    private async Task ShowPending()
    {
        _showCompleted = false;
        await RefreshList();
    }

    private async Task ShowCompleted()
    {
        _showCompleted = true;
        await RefreshList();
    }

    private async Task RefreshList()
    {
        if (_virtualizeComponent != null)
        {
            await _virtualizeComponent.RefreshDataAsync();
        }
        StateHasChanged();
    }

    #region Task Card Event Handlers
    private void HandleTaskDeleteRequest(TaskDto task)
    {
        _deletingTask = task;
        _showDeleteConfirm = true;
    }

    private async Task HandleTaskUpdated(TaskDto task)
    {
        await RefreshList();
    }

    private void HandleTaskEdit(TaskDto task)
    {
        _editingTask = task;
        _showTaskDialog = true;
    }

    private void HandleTaskAssignToProject(TaskDto task)
    {
        _assigningTask = task;
        _showAssignDialog = true;
    }
    #endregion

    #region Task Dialog Event Handlers
    private async Task HandleTaskSaved(TaskDto task)
    {
        _showTaskDialog = false;
        await RefreshList();
    }
    
    private void CloseTaskDialog()
    {
        _editingTask = null;
        _showTaskDialog = false;
    }

    private async Task HandleTaskAssigned()
    {
        _showAssignDialog = false;
        _assigningTask = null;
        await RefreshList();
    }

    private void CloseAssignDialog()
    {
        _assigningTask = null;
        _showAssignDialog = false;
    }

    private async Task ConfirmDelete()
    {
        _showDeleteConfirm = false;
        if (_deletingTask != null)
        {
            var success = await TaskService.DeleteTaskAsync(_deletingTask.Id);
            if (success)
            {
                await RefreshList();
            }
        }
        _deletingTask = null;
    }

    private void CancelDelete()
    {
        _deletingTask = null;
        _showDeleteConfirm = false;
    }
    #endregion
}