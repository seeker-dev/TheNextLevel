@using TheNextLevel.Components.Objects
@using TheNextLevel.Components.Dialogs
@using TheNextLevel.Application.Tasks.DTOs
@using TheNextLevel.Application.Tasks.Services
@inject ITaskService TaskService

@page "/"
<main class="main-content">
    <div class="task-section">
        <div class="section-header">
            <h1>My Tasks</h1>
        </div>
        @if (_isLoading)
        {
            <p>Loading tasks...</p>
        }
        else if (_tasks?.Count > 0)
        {
            <div class="task-grid">
                @foreach (var task in _tasks)
                {
                    <TaskCard Task="@task" OnTaskUpdated="OnTaskUpdated" />
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>No tasks yet. Create your first task to get started!</p>
            </div>
        }
        <div class="fab-container">
            <button class="fab" @onclick="ShowNewTaskDialogHandler">+</button>
        </div>
        <TaskCreateDialog IsVisible="@_isNewTaskDialogVisible"
                          OnTaskCreated="OnTaskCreated"
                          OnCancel="OnTaskDialogCancel" />
    </div>
</main>

@code
{
    private List<TaskDto> _tasks = new List<TaskDto>();
    private bool _isLoading = true;
    private bool _isNewTaskDialogVisible = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        try
        {
            _isLoading = true;
            var tasks = await TaskService.GetAllTasksAsync();
            _tasks = tasks.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading tasks: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowNewTaskDialogHandler() => _isNewTaskDialogVisible = true;

    private void OnTaskDialogCancel() => _isNewTaskDialogVisible = false;

    private async Task OnTaskCreated(TaskDto newTask)
    {
        _isNewTaskDialogVisible = false;
        await LoadTasks(); // Refresh the task list
    }
    
    private Task OnTaskUpdated(TaskDto updatedTask)
    {
        // Update the task in the local list
        var index = _tasks.FindIndex(t => t.Id == updatedTask.Id);
        if (index >= 0)
        {
            _tasks[index] = updatedTask;
            StateHasChanged();
        }
        return Task.CompletedTask;
    }
}
