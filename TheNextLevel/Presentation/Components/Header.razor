<header class="header">
    <div class="header-top">
        <div class="header-left">
            <h1>My Projects</h1>
            <p class="date">@DateTime.Now.ToString("dddd, MMMM d")</p>
        </div>
        <div class="header-actions">
            <button class="new-project-btn" @onclick="ShowNewProjectDialog">
                <span>+</span>
                <span>New Project</span>
            </button>
        </div>        
    </div>
    <div class="search-container">
        <input type="text" class="search-box" placeholder="Search tasks and projects..." @bind="_searchQuery" @bind:event="oninput" />
    </div>    
</header>

