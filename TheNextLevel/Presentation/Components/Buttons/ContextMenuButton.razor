@if (showMenu)
{
    <div class="task-menu">
        <button class="menu-item" @onclick="OnEditClick">Edit</button>
        <button class="menu-item" @onclick="OnAssignToProjectClick">Assign to Project</button>
        <button class="menu-item menu-item-danger" @onclick="OnDeleteClick">Delete</button>
    </div>
}

@code {
    [Parameter]
    public EventCallback OnEdit { get; set; }

    [Parameter]
    public EventCallback OnAssignToProject { get; set; }

    [Parameter]
    public EventCallback OnDelete { get; set; }

    private bool showMenu = false;

    private void OnMenuClick()
    {
        showMenu = !showMenu;
    }

    private async Task OnEditClick()
    {
        showMenu = false;
        await OnEdit.InvokeAsync(null);
    }

    private async Task OnAssignToProjectClick()
    {
        showMenu = false;
        await OnAssignToProject.InvokeAsync(null);
    }

    private async Task OnDeleteClick()
    {
        showMenu = false;
        await OnDelete.InvokeAsync(null);
    }
}